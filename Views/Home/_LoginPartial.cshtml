@model Login
<h3>Login Form</h3>
<form asp-action="LogIn" asp-controller="Home" method="POST">
    <div>
        <label asp-for="LoginEmail" class="form-label"></label>
        <input asp-for="LoginEmail" class="form-control"/><br />
        <span asp-validation-for="LoginEmail"></span>
    </div>
    <div>
        <label asp-for="LoginPassword" class="form-label"></label>
        <input asp-for="LoginPassword" class="form-control"/><br />
        <span asp-validation-for="LoginPassword"></span>
    </div>
    <button type="submit">Submit</button>
</form>